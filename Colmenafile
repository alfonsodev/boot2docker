FROM boot2docker/boot2docker
RUN curl -L -o /rootfs/usr/local/bin/docker https://github.com/alfonsodev/docker/releases/download/v1.5.1-rc1-b/docker-64x-1.4.1 && \
    chmod +x /rootfs/usr/local/bin/docker 
ADD rootfs/rootfs/usr/local/etc/init.d/docker /rootfs/usr/local/etc/init.d/docker
RUN chmod +x /rootfs/usr/local/etc/init.d/docker
RUN /make_iso.sh
CMD ["cat", "boot2docker.iso"]
